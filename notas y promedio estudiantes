#include <iostream>
#include <string>
#include <iomanip>
#include <stdio.h>
#define TAMAX 45


using namespace std;

int leer_notas (float notas[][5], string nombre []);
void calculoDef (int n, float notas [][5]);
void mostrar(int n, float notas[][5], string nombre []);
void calcularEstad(int n, float notas[][5],string nombre[]);

int main ()
{
	string nombre [TAMAX];
	float notas [TAMAX][5];
	int n;
	
	n= leer_notas (notas, nombre);
	cout<<"NOTAS SIN DEFINITIVA \n\n";
	mostrar(n,notas, nombre);
	system("pause");
	system ("cls");
	calculoDef (n,notas);
	cout<<"\n\nNOTAS CON DEFINITIVA\n\n ";
	mostrar(n,notas,nombre);
	system("pause");
	cout << "\nESTADISTICAS"<<endl;
	system ("cls");
	calcularEstad(n,notas,nombre);
	
	return 0;
}

//--------------------------------------------------

int leer_notas (float notas[][5], string nombre [])
{
 int  n;
int i;
int j;

do 
{
cout << "ingrese numero de estudiantes (1-45):  ";
cin >> n; 
}while (n> 45 or n< 1);

   for (i=0; i<n; i++)
     {
	     cout<< "ingrese nombre estudiante:  ", i+1;
	     cin>> (nombre[i]);
	 
	     for (j=0;j<4; j++)
	     {
	       do
	       {
	 	    cout << " escriba nota "<<j+1<<" del estudiante  "<< nombre [i]<< "   :";
	 	    cin >> notas[i][j];
	       } while (notas[i][j]< 0.0 or notas [i][j]>5.0);
	
	     }
	 
     }
return n;
}
//------------------------------------------

void calculoDef (int n, float notas [][5])
{
int i;
int j;
float suma;
	
	for (i=0;i<n;i++)
	{
		suma= 0.0;
		for (j=0;j<4; j++)
		{
		suma= suma+ notas [i][j];
	    }
		notas[i][4]=suma/4 ;
	}
}
//--------------------------------------------------------------------------------------------------

void mostrar(int n, float notas[][5], string nombre [])
{
int i;
int j;
system("cls");
cout <<" NÂº nombre \tNota1 \tNota 2 \tNota 3\tNota 4 \tDefinitiva";
for (i=0;i<n;i++)
{
	cout<<endl;
	cout<<"\n"<<i+1<<nombre[i];
	
	for (j=0;j<5;j++)
	{
	cout << notas [i][j]<<"  ";
    }
	
}
	
}
	
void calcularEstad(int n, float notas[][5],string nombre[])	
{
int i;
int ganaron;
int perdieron;
int spromedio;
int bpromedio;
float suma= 0.0;
float promedio;
	
ganaron= 0;
perdieron= 0;
for (i=0;i<n;i++)
 {
 	if (notas[i][4]> 3.0)
	 {
 	   ganaron++;
     }
 	else 
 	{
 		perdieron ++;	
	}
	    	
}	
	
for (i=0;i<n; i++)
{
	suma =suma + notas [i][4];
}

promedio= suma/n;
spromedio= 0;
bpromedio=0;

for (i=0;i<n; i++)
{
	if (promedio< notas[i][4])
	{
		spromedio=spromedio + 1;
	}
	else
	{
		if ( promedio > notas[i][4])
		{
			bpromedio=bpromedio + 1;
		}
	}
	
}

cout << "\nla nota promedio es                 "<< promedio;
cout << "\nestudiantes que ganaron             "<< ganaron;
cout << "\nestudiantes que perdieron           "<< perdieron;
cout << "\nestudiantes por encima del promedio "<< spromedio;
cout << "\nestudiantes por debajo del promedio "<< bpromedio;	
	
}
