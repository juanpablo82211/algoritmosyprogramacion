   switch(opc)
   {
   	case 1:system("cls");
	    cout <<"==== NUMEROS ALEATORIOS \n\n";
            VectorAleatorio (a, TAM);
            mostrar(a, TAM);
            vectorOrdenado(a, TAM);
            cout<< endl;
            system("Pause");
            
			break;
	case 2:system("cls"); 
	cout <<"====MATRIZ aleatoria nxn \n";
            matrizAleatoria();
            matrizCambiada();
	         cout<< endl;
            system("Pause");
			break;
